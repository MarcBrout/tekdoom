#include "main.h"

void	forward(t_main *doom)
{
  doom->speed += 1;
  if (doom->pars.maps->next->lvls->next->size
      [(int)doom->cals.posx + doom->calc.dirx * doom->speed]
      [(int)doom->calc.posy])
    doom->calc.posx += doom->calc.dirx * movespeed;
  if (doom->pars.maps->next->lvls->next->size
      [(int)doom->cals.posx]
      [(int)doom->calc.posy + doom->calc.diry * doom->speed])
    doom->calc.posy += doom->calc.diry * movespeed;
}

void	back(t_main *doom)
{

}
